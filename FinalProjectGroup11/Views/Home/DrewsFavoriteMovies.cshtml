@model List<Movie>
@{
    ViewBag.Title = "My Movies";
}
<h2>Drew's Favorite Movies'</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Year</th>
         
            <th>Rating</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Year</td>
                <td>@movie.Rating</td>
               
            </tr>
        }
    </tbody>
</table>
