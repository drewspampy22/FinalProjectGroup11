@model IEnumerable<FinalProjectGroup11.Models.Movie>

@{
    ViewData["Title"] = "Movies Database";

    // Extra safety so we never call Any() on null
    var movies = Model ?? Enumerable.Empty<FinalProjectGroup11.Models.Movie>();
}

<div class="container py-4">
    <h1 class="display-6 mb-3">Movies Database</h1>

    <p class="text-muted">
        This page displays movie data stored in our SQL Server database.
    </p>

    @if (!movies.Any())
    {
        <div class="alert alert-info mt-3">
            There are currently no movies in the database. Add some rows to the <strong>Movies</strong> table
            and refresh this page.
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered mt-3">
            <thead class="table-light">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Year</th>
                    <th scope="col">Rating</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in movies)
                {
                    <tr>
                        <td>@movie.MovieId</td>
                        <td>@movie.Name</td>
                        <td>@movie.Year</td>
                        <td>@movie.Rating</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

